@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class=" row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Editar productos y crear productos</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Producto" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Crear nuevo producto
            </a>
        </div>
    </div>

</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Productos
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Name
                </td>

                <td width="20">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Producto" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-controller="Producto" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Eliminar
                        </a> 
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>