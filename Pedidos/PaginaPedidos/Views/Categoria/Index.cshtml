@model IEnumerable<Categoria>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class=" row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Editar categorias y agregar productos</h2>
            
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categoria" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Crear nueva categoria
            </a>
        </div>
    </div>
        
</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Categorias
            </th>
            <th>
                Descripcion
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Nombre
                </td>
                <td width="50%">
                    @obj.Descripcion
                </td>
                <td width="20">
                    <div class="w-75 btn-group" role="group">
                    <a asp-controller="Categoria" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Editar</a>
                    <a asp-controller="Categoria" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3"></i> Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

